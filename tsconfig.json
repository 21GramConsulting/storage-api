{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "artifact/lib",
    "declaration": true,
    "target": "ES6",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "lib": [
      "dom"
    ]
  },
  "include": [
    "src/main/**/*.ts",
    "test/unit/**/*.ts",
    "test/component/**/*.ts",
    "test/integration/**/*.ts",
    "test/system/**/*.ts"
  ]
}
